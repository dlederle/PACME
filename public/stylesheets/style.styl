body#body
	background-color #CCCCCC
	font-family "Helvetica Neue", "Lucida Grande", "Arial"
	font-size 13px
	text-align center
	text-stroke 1px rgba(255, 255, 255, 0.1)
	color #555
h1, h2
	margin 0
	font-size 22px
	color #343434
h1
	text-shadow 1px 2px 2px #ddd
	font-size 60px
#logo
	margin 0
	float left
	border-radius 20px
	-moz-border-radius: 20px
	-webkit-border-radius 20px
	border 1px solid #000
#events
	background-color #fff
	border-radius 20px
	-moz-border-radius: 20px
	-webkit-border-radius 20px
	border 1px solid #000
#news
	background-color #fff
	border-radius 20px
	-moz-border-radius: 20px
	-webkit-border-radius 20px
	border 1px solid #000

#footer
  text-align  center
  width 580px
  margin-top  9px
  padding 4.5px 0 18px
  border-top  1px solid #dfdfdf
#footer p
  margin 4.5px 0
  font-size 1.0em
#nav
	float left
	text-align right
	margin-right auto
	color #000066
#about
	text-align left
	background-color #fff
	border-radius 20px
	-moz-border-radius: 20px
	-webkit-border-radius 20px
	border 1px solid #000
#articles
	text-align left
	margin-left auto
	margin-right auto
	.article
		margin 20px
		.created_at
				display none
		.title
				font-weight bold
				text-decoration underline
	.article
		.created_at
			display none
		input[type =text]
			width 490px
			margin-left 16px
		input[type =button], input[type =submit]
			text-align left
			margin-left 440px
		textarea
			width 490px
			height 90px
.slides_container
	width 700px
	height 422px
	overflow hidden
	position relative
	display none
	//border 1px solid #0E1096
	padding 5px
	background-color: #FFFFFF
#slides
	position relative
	top 15px
	left 4px
	z-index 100
	width 710
	height 500
